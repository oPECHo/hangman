<HomeScreen>:
    GridLayout:
        cols: 1
        size_hint: 0.6, 0.7
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        Image:
            source: 'images/logo.png'
            size_hint: 10, 10      
        Button:
            id: start_game_button
            text: "Start Game"
            font_size: 20
            font_name: "fonts/Plaguard.otf"
            font_color:(1,0,0,1)
            size_hint: 0.1, 0.4
            bold: True
            background_color: '#000000'
            on_release: 
                app.root.current = "Game"


<MyRoot>:
    orientation: "vertical"

    Label:
        text: "Hangman"
        font_name: "fonts/Plaguard.otf"
        font_size: 84
        color: 0, 1, 0, 1
        color: 0, 1, 0, 1

    BoxLayout:
        size_hint: 1, 0.5

        Label:
            size_hint: 0.25, 1

                    
        Label:
            text:"SCORE: " + root.SCORE
            font_name: "fonts/Plaguard.otf"
            font_size: 24
            size_hint: 0.01, 1
            color: 1, 0, 0, 1

        Label:
            text: "ERRORS: " + root.ERRORS
            font_name: "fonts/Plaguard.otf"
            font_size: 32
            color: 0, 1, 0, 1
            size_hint: 0.5, 1

        Button:
            text: "Restart"
            font_size: 24
            font_name: "fonts/Plaguard.otf"
            size_hint: 0.25, 1
            on_press: root.start_game()


    Image:
        source: root.HANGMAN_IMG
        size_hint: 1, 2

    Label:
        text: root.GAME_MSG
        size_hint: 1, 0.75
        font_name: "fonts/Plaguard.otf"
        font_size: 32
        color: 0, 1, 0, 1

    Label:
        text: root.WORD_DISPLAY
        size_hint: 1, 0.75
        font_name: "fonts/Plaguard.otf"
        font_size: 32
        color: 0, 1, 0, 1

    Label:
        text: "Available Letters"
        size_hint: 1, 0.75
        font_name: "fonts/Plaguard.otf"
        font_size: 32
        color: 0, 1, 0, 1
    
    ButtonsLayout:
